---
const { title, img, description, gitUrl, url, tags = [] } = Astro.props;
---

<div class="card card-compact lg:card-side bg-base-100 shadow-xl">
  <figure class="basis-1/2">
    <img src={img} alt={title} />
  </figure>
  <div class="basis-1/2 card-body">
    <h2 class="card-title">{title}</h2>
    <p>{description}</p>
    <div class="card-actions">
      <div class="flex flex-row space-x-2">
        {gitUrl ? <a href={gitUrl}>Github Repository</a> : <div />}
        {url ? <a href={url}>Demo</a> : <div />}
      </div>
      <div class="flex flex-row flex-wrap">
        {
          tags.map((tag: string) => (
            <div class="badge badge-outline m-1 p-3">
              <a href={"#" + tag}>{tag}</a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>

<style>
  a {
    @apply !link font-bold !link-primary;
  }
</style>
